<view class="showMap">
    <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14.5"  markers="{{markers}}" show-location="true" style="width: 100%; height: 100%;" ></map>
</view>
<view class="buttonView">
    <view bindtap="changeAvatar" class="avatarButton">
        <image src='../../images/default.png' class='avatar'></image>
    </view>
    <view bindtap="currentPos" class="posButton">
        <image src='../../images/pos.png' class='avatar'></image>
    </view>
</view>
